.goods_detail_index {
  padding-bottom: 90rpx;
}
.goods_detail_index .detail_swiper swiper {
  height: 65vw;
  text-align: center;
}
.goods_detail_index .detail_swiper swiper image {
  width: 70%;
}
.goods_detail_index .detail_price {
  color: var(--themeColor);
  font-weight: 600;
  padding: 15rpx;
  font-size: 32rpx;
}
.goods_detail_index .detail_name_row {
  display: flex;
  padding: 15rpx;
}
.goods_detail_index .detail_name_row .name_row_text {
  flex: 8;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods_detail_index .detail_name_row .name_row_collect {
  flex: 2;
  text-align: center;
}
.goods_detail_index .detail_info .info_title {
  font-size: 32rpx;
  color: var(--themeColor);
  font-weight: 600;
  padding: 20rpx;
}
.goods_detail_index .detail_btm_tool {
  border-top: 1rpx solid #ccc;
  display: flex;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 90rpx;
  background-color: #fff;
}
.goods_detail_index .detail_btm_tool .tool_item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  position: relative;
}
.goods_detail_index .detail_btm_tool .tool_item button {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.goods_detail_index .detail_btm_tool .tool_cates {
  flex: 2;
  background-color: #ffa300;
  font-size: 30rpx;
  color: #fff;
}
.goods_detail_index .detail_btm_tool .tool_buy {
  flex: 2;
  background-color: #f9544e;
  font-size: 30rpx;
  color: #fff;
}

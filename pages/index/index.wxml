<view class="pyg_index">
  <!-- 搜索框开始 -->
  <SearchInput></SearchInput>
  <!-- 搜索框结束 -->
  <!-- 轮播图开始 -->
  <view class="index_swiper">
    <swiper
      autoplay
      indicatorDots
      circular
      >
      <swiper-item
        wx:for="{{swiperList}}"
        wx:key="index"
        >
        <navigator url="{{item.navigator_url}}" type="{{item.open_type}}">
          <image mode="widthFix"  src="{{item.image_src}}"  />
        </navigator>
      </swiper-item>
    </swiper>
  </view>
  <!-- 轮播图结束 -->
</view>
  
